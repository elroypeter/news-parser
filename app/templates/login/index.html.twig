{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<div class="login-page bg-light">
		<div class="container">
			<div class="row">
				<div class="col-lg-6 offset-lg-1 mx-auto">
					<h3 class="mb-3">Login</h3>
					<div class="bg-white shadow rounded mb-3">
						<div class="row">
							<div class="col-md-12 pe-0 mx-auto">
								<div class="h-100 py-5 px-5">
									<form action="{{ path('login') }}" method="post" class="row g-4">
										<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
										<div class="col-12">
											<label>Username<span class="text-danger">*</span>
											</label>
											<div class="input-group">
												<div class="input-group-text">
													<i class="bi bi-person-fill"></i>
												</div>
												<input id="username" name="_username" value="{{ username }}" type="text" class="form-control" placeholder="Enter Username">
											</div>
										</div>

										<div class="col-12">
											<label>Password<span class="text-danger">*</span>
											</label>
											<div class="input-group">
												<div class="input-group-text">
													<i class="bi bi-lock-fill"></i>
												</div>
												<input class="form-control" type="password" id="password" name="_password" placeholder="Enter Password">
											</div>
										</div>

										<input type="hidden" name="_target_path" value="/articles"/>

										<div class="col-12">
											<button type="submit" class="btn btn-primary px-4 float-end mt-4">login</button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>

					{% if error %}
						<div class="alert alert-danger alert-dismissible fade show" role="alert">
							{{ error.messageKey|trans(error.messageData, 'security') }}
							<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
